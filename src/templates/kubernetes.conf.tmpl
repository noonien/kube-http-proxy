{{range $serviceJSON := getvs "/registry/services/specs/*/*"}}
{{$service := json $serviceJSON}}
{{$metadata := $service.metadata}}
{{$spec := $service.spec}}

{{if $metadata.annotations}}
{{$servers := (index $metadata.annotations "http-proxy-servers")}}
{{if $servers}}

{{range $server := jsonArray $servers}}
{{if $server.host}}
# Generated config for {{$server.host}}
server {
    listen {{or $server.port 80}};
    server_name {{$server.host}};

    {{if $server.ssl}}
    return 301 https://$server_name$request_uri;
}
server {
    listen {{or $server.sslPort 443}};
    server_name {{$server.host}};

    ssl_certificate           /etc/nginx/ssl/{{$server.host}}.crt;
    ssl_certificate_key       /etc/nginx/ssl/{{$server.host}}.key;

    ssl on;
    ssl_session_cache  builtin:1000  shared:SSL:10m;
    ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
    ssl_prefer_server_ciphers on;
    {{end}}

    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;

    location {{or $server.path "/"}} {
        {{if $server.webSocket}}
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        {{end}}

        proxy_pass http://{{$spec.portalIP}}:{{or $server.targetPort 80}};
    }

    {{range $serviceJSON := getvs "/registry/services/specs/*/*"}}
    {{$service := json $serviceJSON}}
    {{$metadata := $service.metadata}}
    {{$spec := $service.spec}}

    {{if $metadata.annotations}}
    {{$paths := (index $metadata.annotations "http-proxy-paths")}}
    {{if $paths}}
    {{range $host, $paths2 := json $paths}}
    {{if eq $server.host $host}}
    {{range $path := $paths2}}
    {{if $path.path}}
    location {{$path.path}} {
        {{if $path.webSocket}}
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        {{end}}

        proxy_pass http://{{$spec.portalIP}}:{{or $path.targetPort 80}};
    }
    {{end}}
    {{end}}
    {{end}}
    {{end}}
    {{end}}
    {{end}}
    {{end}}
}
{{end}}
{{end}}

{{end}}
{{end}}
{{end}}
